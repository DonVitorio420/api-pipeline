{
  "name": "api-pipeline",
  "version": "1.0.0",
  "description": "API con CRUD de posts y usuarios, probada con Jest + Supertest",
  "main": "api/index.js",
  "author": "VÃ­ctor Pineda",
  "license": "ISC",
  "scripts": {
    "dev": "nodemon api/index.js",
    "start": "node api/index.js",
    "seed": "node scripts/seed.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint api --ext .js",
    "format": "prettier --write \"api/**/*.js\""
  },
  "dependencies": {
    "cors": "^2.8.5",
