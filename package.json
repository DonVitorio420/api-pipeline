    "express": "^4.21.1",
    "helmet": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": ["api/**/*.js", "!api/db/db.json"]
  }
}
